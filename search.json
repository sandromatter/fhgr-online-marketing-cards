---
---

[
{% for post in site.posts %}
{

      "title"       : "{{ post.title | escape }}",
      "url"         : "{{ site.baseurl }}{{ post.permalink }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "description" : "{{ post.description | strip_html | strip_newlines | escape }}",
      "date"        : "{{ post.date }}"

    } {% unless forloop.last %},{% endunless %}

{% endfor %}
]
